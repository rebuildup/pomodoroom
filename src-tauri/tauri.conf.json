{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoroom",
  "version": "1.4.6",
  "identifier": "com.pomodoroom.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420/",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pomodoroom",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "visible": true,
        "decorations": false
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": false,
      "pubkey": "",
      "endpoints": []
    }
  }
}
