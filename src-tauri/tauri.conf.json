{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoroom",
  "version": "1.0.0",
  "identifier": "com.pomodoroom.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pomodoroom",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.sentry.io; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; media-src 'self' https:; object-src 'none'; frame-src 'none'; form-action 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
