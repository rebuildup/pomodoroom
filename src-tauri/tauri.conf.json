{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoroom",
  "version": "1.0.0",
  "identifier": "com.pomodoroom.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pomodoroom",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.sentry.io https://api.github.com https://github.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; media-src 'self' https:; object-src 'none'; frame-src 'none'; form-action 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "rebuildup",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "upgradeCode": "7E7D5A5C-3E9A-4B8F-9C2D-1A2B3C4D5E6F"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/rebuildup/pomodoroom-desktop/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
